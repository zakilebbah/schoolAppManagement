<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.schoolapp">

    <application
        android:name=".MainApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SchoolApp">
        <activity
            android:name=".ui.classePage.MainClassePage"
            android:exported="false"
            android:label="Classe"/>
        <activity
            android:name=".ui.classePage.StudentsList"
            android:exported="false" />
        <activity
            android:name=".ui.addClasse.ClassePage"
            android:exported="false"
            android:label="@string/title_activity_classe_page"
            android:theme="@style/Theme.SchoolApp.NoActionBar" />
        <activity
            android:name=".ui.addStudent.AddStudentPage"
            android:exported="false" />
        <activity
            android:name=".ui.addClasse.AddClassePage"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>